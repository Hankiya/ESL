<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#C4E2F1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4E2F1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_bar_code"
            android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
            android:background="#C4E2F1"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingLeft="60px"
            android:paddingTop="10px"
            android:text="商品条码:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/e_bar_code"
            android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="5"
            android:hint="商品条码"
            android:textColorLink="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4E2F1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_esl_name"
            android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
            android:background="#C4E2F1"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingLeft="60px"
            android:paddingTop="10px"
            android:text="商品名称:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/e_esl_name"
            android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="5"
            android:hint="商品名称"
            android:textColorLink="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4E2F1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_status"
            android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
            android:background="#C4E2F1"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingLeft="60px"
            android:paddingTop="10px"
            android:text="状态:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/e_status"
            android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="5"
            android:hint="状态"
            android:textColorLink="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
	
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4E2F1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t_category"
            android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="3"
            android:background="#C4E2F1"
            android:gravity="center"
            android:paddingBottom="10px"
            android:paddingLeft="60px"
            android:paddingTop="10px"
            android:text="类别:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/e_category"
            android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="5"
            android:hint="类别"
            android:textColorLink="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#C4E2F1"
        android:orientation="horizontal" >

        <Button
			android:id="@+id/good_search_btn"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="查询"
		/>

        <Button
			android:id="@+id/good_reset_btn"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="重置"
		/>
    <Button
			android:id="@+id/good_add_btn"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="添加商品"
		/>
    </LinearLayout>
    
    
    <ExpandableListView
        android:id="@id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="false" />

    <TextView
        android:id="@id/android:empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/no_data" />

</LinearLayout>